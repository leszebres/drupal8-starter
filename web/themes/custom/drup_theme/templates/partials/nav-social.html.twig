<nav class="nav nav--social">
    <ul class="nav-menu">
        {% for item in items %}
            {% if item.link_url %}
                <li class="nav-item">
                    <a href="{{ item.link_url }}" title="{{ 'Visit our @media page'|t({'@media': item.title}) }}" target="_blank">
                        <span class="sr-only">{{ item.title }}</span>
                        <span class="icon icon--{{ item.id }}"></span>
                    </a>
                </li>
            {% endif %}
        {% endfor %}
    </ul>
</nav>