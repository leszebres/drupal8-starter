{#
/**
 * @file
 * The views infinite scroll pager template.
 */
#}

{% if items.next %}
    <nav class="nav nav--pager">
        <ul {{ attributes }}>
            <li class="pager-item">
                <a class="{{ btn_classes }}" href="{{ items.next.href }}" title="{{ 'Go to next page'|t }}" rel="next">{{ options.button_text|t }}</a>
            </li>
        </ul>
    </nav>
{% endif %}
